<UserControl 
    x:Name="ucCustomer"
    x:Class="GemstonesBusinessManagementSystem.Resources.UserControls.CustomerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GemstonesBusinessManagementSystem.Resources.UserControls"
    mc:Ignorable="d"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
    DataContext="{StaticResource CustomerVM}"
    Height="40"
    Margin="0,4,0,0"
    Style="{StaticResource MyUCHoverStyle }"
    Cursor="Hand"
    Focusable="True">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="MouseDown">
            <i:InvokeCommandAction Command="{Binding PickCustomerCommand}"
                                   CommandParameter="{Binding ElementName=ucCustomer}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Border
        BorderBrush="{StaticResource Light}"
        BorderThickness="2">
        <Grid 
            x:Name="grdMain"
            Margin="0"
            Background="White"
            Focusable="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1.5*" />
            </Grid.ColumnDefinitions>
            <TextBlock 
                x:Name="txbId"
                Grid.Column="0"
                TextAlignment="Center"
                Text="Mã KH"
                TextWrapping="Wrap"
                VerticalAlignment="Center"
                FontSize="18"
                FontWeight="Medium"
                HorizontalAlignment="Center" />
            <TextBlock 
                x:Name="txbName"
                Text="Họ tên"
                Grid.Column="1"
                HorizontalAlignment="Left"
                Margin="20,0,0,0"
                TextWrapping="Wrap"
                VerticalAlignment="Center"
                FontSize="18"
                FontWeight="Medium" />
            <TextBlock 
                x:Name="txbPhoneNumber"
                Grid.Column="2"
                HorizontalAlignment="Center"
                Margin="0"
                Text="SĐT"
                TextWrapping="Wrap"
                VerticalAlignment="Center"
                FontSize="18"
                Padding="0"
                FontWeight="Medium" />
            <TextBlock
                x:Name="txbIdNumber"
                Grid.Column="3"
                Text="CMND"
                HorizontalAlignment="Center"
                Margin="0"
                TextWrapping="Wrap"
                VerticalAlignment="Center"
                FontSize="18"
                Padding="0"
                FontWeight="Medium"/>
            <TextBlock 
                x:Name="txbAddress"
                Grid.Column="4"
                HorizontalAlignment="Center"
                Margin="0"
                Text="Địa chỉ"
                TextWrapping="Wrap"
                VerticalAlignment="Center"
                FontSize="18"
                Padding="0"
                FontWeight="Medium" />
            <TextBlock 
                x:Name="txbRank"
                Grid.Column="5"
                HorizontalAlignment="Center"
                Margin="0"
                Text="Hạng KH"
                TextWrapping="Wrap"
                VerticalAlignment="Center"
                FontSize="18"
                Padding="0"
                FontWeight="Medium" />
        </Grid>
    </Border>
</UserControl>