<UserControl 
    x:Class="GemstonesBusinessManagementSystem.Resources.UserControls.GoodsTypeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:GemstonesBusinessManagementSystem.Resources.UserControls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    mc:Ignorable="d" 
    x:Name="ucGoodsTypeControl"
    Height="40" 
    DataContext="{StaticResource GoodsTypeVM}"
    Margin="0,0,0,2">
    <Grid>
        <Grid x:Name="grdMain">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Rectangle 
                Grid.ColumnSpan="8"
                Fill="{StaticResource Light}"
                Height="1"
                VerticalAlignment="Bottom"/>
            <TextBlock 
                x:Name="txbId"
                Text="Mã SP"
                Grid.Column="0"
                HorizontalAlignment="Center" 
                Margin="0" 
                TextWrapping="Wrap" 
                VerticalAlignment="Center" 
                FontSize="16" 
                FontWeight="SemiBold"/>
            <TextBlock 
                x:Name="txbName"
                Text="Tên loại" 
                Grid.Column="1"
                HorizontalAlignment="Left" 
                Margin="20,0,0,0" 
                TextWrapping="Wrap" 
                VerticalAlignment="Center" 
                FontSize="16" 
                FontWeight="SemiBold" />
            <TextBlock 
                x:Name="txbUnit"
                Text="Đơn vị" 
                Grid.Column="2"
                HorizontalAlignment="Center" 
                Margin="0" 
                TextWrapping="Wrap" 
                VerticalAlignment="Center" 
                FontSize="16" 
                FontWeight="SemiBold"/>
            <TextBlock 
                x:Name="txbProfitPercentage"
                Text="Lợi nhuận" 
                Grid.Column="3"
                HorizontalAlignment="Center" 
                Margin="0" 
                TextWrapping="Wrap" 
                VerticalAlignment="Center" 
                FontSize="16" 
                FontWeight="SemiBold"/>
            <Button 
                Grid.ColumnSpan="5"
                Command="{Binding SelectedGoodsTypeCommand}"
                CommandParameter="{Binding ElementName=ucGoodsTypeControl}"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                FocusVisualStyle="{x:Null}"
                Style="{StaticResource MaterialDesignFlatButton}" 
                Height="Auto"/>
            <Button 
                Grid.Column="4"
                ToolTip="Xóa mặt hàng" 
                Height="30"
                Background="{x:Null}" 
                BorderBrush="{x:Null}" 
                FontSize="16" 
                VerticalAlignment="Center" 
                FocusVisualStyle="{x:Null}"
                Width="40"
                HorizontalAlignment="Center" 
                FontWeight="SemiBold" 
                Command="{Binding DeleteCommand}"
                CommandParameter="{Binding ElementName=ucGoodsTypeControl}"
                Padding="0" >
                <materialDesign:PackIcon 
                    Kind="DeleteOutline" 
                    Height="24"
                    Width="24"
                    Foreground="{StaticResource Error}"/>
            </Button>
        </Grid>
    </Grid>
</UserControl>
